<div class="row alert-area">
</div>
<div class="row">
  <div class="col-md-8">
    <div class="row">
      <div class="col-md-4">
        <div class="row text-center">
          <%= current_user.full_name %>
        </div>
        <div class="row text-center">
          <img src="" alt="<%= current_user.full_name %>'s avatar" width="100" height="100">
        </div>
        <div class="row text-center">
          <strong><%= current_user.followers.size %> followers</strong>
        </div>
        <div class="row text-center">
          <strong><%= current_user.following.size %> following</strong>
        </div>
      </div>
      <%= render "statuses/new" %>
    </div>
    <div class="row" id="statuses-content">
      <% current_user.statuses.each do |status| %>
        <%= render "statuses/status", status: status %>
      <% end %>
    </div>
  </div>

  <div class="col-md-4">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">User list</h3>
      </div>
      <div class="panel-body">
        <ul>
          <% @users.each do |user| %>
            <li>
              <%= link_to user.full_name, user_path(user) %>
              <%= link_to "Chat", conversations_path(user_id: user), remote: true, method: :post,
                class: "btn-chat btn btn-xs btn-success"  %>
            </li>
            <br>
          <% end %>
        </ul>
      </div>
    </div>
    <ul id="conversations-list">
      <% @conversations.each do |conversation| %>
          <%= render "conversations/conversation", conversation: conversation, user: current_user %>
      <% end %>
    </ul>
  </div>
</div>
