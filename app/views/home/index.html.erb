<div class="row alert-area">
</div>
<div class="row">
  <div class="col-md-8">
    <div class="row">
      <div class="col-md-4">
        <div class="panel panel-default">
          <div class="panel-body">
            <div class="row text-center">
              <%= image_tag current_user.avatar, width: 160, height: 160,
                alt: "#{current_user.full_name}'s avatar"  %>
            </div>
          <%= render "shared/relationship_info", user: current_user %>
          </div>
        </div>
      </div>
      <%= render "shared/modal_relationship_all", type: :followers, user: current_user %>
      <%= render "shared/modal_relationship_all", type: :following, user: current_user %>
      <%= render "statuses/new" %>
    </div>
    <div class="row" id="statuses-content">
      <% current_user.statuses.each do |status| %>
        <%= render "statuses/status", status: status %>
      <% end %>
    </div>
  </div>
  <%= render "shared/friend_list" %>
</div>
