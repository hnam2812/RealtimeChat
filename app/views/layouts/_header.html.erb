<header class="navbar navbar-fixed-top navbar-header">
  <div class="container">
    <div class="row">
      <div class="col-md-5">
        <%= link_to "Realtime Chat", root_path, id: "logo" %>
      </div>
      <div class="col-md-7">
        <% if user_signed_in? %>
          <div class="mt-15 search-area pull-left">
            <%= form_tag "/search", class: "inline-text",  method: :get do |f| -%>
              <%= text_field_tag :q, "", class: "search-input" %>
              <button class="btn-search" type="submit"><i class="material-icons">search</i></button>
            <% end -%>
          </div>
        <% end %>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li><%= link_to "Home", home_path, class: "active" %></li>
              <li class="dropdown">
                <a href="javascript:void(0)" class="dropdown-toggle" data-toggle="dropdown">
                  <%= current_user.full_name %> <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Edit profile", edit_user_registration_path %></li>
                  <li class="divider"></li>
                  <li>
                    <%= link_to "Log out", destroy_user_session_path, method: "delete" %>
                  </li>
                </ul>
              </li>
            <% else %>
              <%= render "layouts/login_form" %>
            <% end %>
          </ul>
        </nav>
      </div>
    </div>
  </div>
</header>
